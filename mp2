provider "aws" {
  region = "ap-south-1"
}

----- vpc 

resource "aws_vpc" "vpc10am" {
  cidr_block       = "10.0.0.0/16"
  instance_tenancy = "default"

  tags = {
    Name = "vpc"
  }
}

----vpc location

resource "aws_subnet" "pubsubnet" {
  vpc_id     = aws_vpc.vpc10am.id
  cidr_block = "10.0.1.0/24" 

  tags = {
    Name = "pub"
  }
} 

